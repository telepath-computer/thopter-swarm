#!/bin/bash

# Example post-checkout script for Thopter Swarm
# This script runs after the repository is cloned but before Claude is launched
# Working directory is the repository root, script is at ../../post-checkout.sh

echo "🔧 Running post-checkout setup in $(pwd)..."

# Example: Install dependencies if package.json exists
if [ -f "package.json" ]; then
    echo "📦 Installing Node.js dependencies..."
    npm install
fi

# Example: Install Python dependencies if requirements.txt exists
if [ -f "requirements.txt" ]; then
    echo "🐍 Installing Python dependencies..."
    pip install -r requirements.txt
fi

# Example: Install other dependencies
# if [ -f "composer.json" ]; then composer install; fi
# if [ -f "Gemfile" ]; then bundle install; fi
# if [ -f "go.mod" ]; then go mod download; fi

# Example: Run build commands
# npm run build
# make build

echo "✅ Post-checkout setup completed in $(pwd)!"